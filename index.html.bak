    <script>
      // Function to fetch device info and check for matching deviceId
      async function checkDevice() {
        try {
          // Fetch device info from the API
          const response = await fetch('https://fantasymmadness-game-server-three.vercel.app/admin/device-info');
          
          // Wait for the response to be converted to JSON
          const data = await response.json();
          
          const deviceId = navigator.userAgent;  // Fetch device info using userAgent
          let isMatched = false;  // Flag to track if there's a match
    
          // Loop through the API data to check if the deviceId matches
          for (let item of data) {
            if (item.deviceId === deviceId) {
              isMatched = true;
              break;  // Exit loop once a match is found
            }
          }
    
          if (isMatched) {
            // If a match is found, hide the button and show the message
            document.getElementById('btn-example1').style.display = 'none';
            document.getElementById('played').style.display = 'block';
          }else{
              document.getElementById('btn-example1').style.display = 'block';
          
          }
        } catch (error) {
          console.error('Error fetching device info:', error);
        }
      }
    
      // Call the checkDevice function
      checkDevice();
    </script>



